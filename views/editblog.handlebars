<div class="container mt-3">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8">
      <div class="card">
        <div class="card-header">
          <h5 class="card-title">Editing the Blog</h5>
        </div>
        <div class="card-body">
          <form id="update-form">
            <div class="mb-3">
              <label for="titleInput" class="form-label">Blog Title</label>
              <input type="text" class="form-control" id="titleInput" name="title" value="{{blogData.blog_title}}">
            </div>
            <div class="mb-3">
              <label for="contentTextarea" class="form-label">Please edit the Blog</label>
              <textarea class="form-control" id="contentTextarea" name="content" rows="5">{{blogData.blog_content}}</textarea>
            </div>
            <button id="submitbutton" class="btn btn-primary">Submit Blog</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="/js/editblog.js"></script>
